<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:layout_marginTop="10dp">

    <ImageView
        android:id="@+id/toy_thumbnail"
        android:layout_marginLeft="10dp"
        android:layout_width="120dp"
        android:layout_height="100dp" />

    <TextView
        android:id="@+id/toy_depict"
        android:textSize="15sp"
        android:textColor="@color/colorBlack"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:gravity="center_vertical"
        android:layout_toRightOf="@id/toy_thumbnail"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@+id/toy_thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/see_3d"
        android:text="3D模型展示"
        android:layout_marginLeft="10dp"
        android:background="@color/colorDishBlue"
        android:layout_below="@+id/toy_thumbnail"
        android:layout_width="100dp"
        android:layout_height="25dp" />

    <Button
        android:id="@+id/toy_short_add_cart"
        android:text="加入购物车"
        android:layout_marginLeft="10dp"
        android:background="@color/colorDishBlue"
        android:layout_toRightOf="@id/see_3d"
        android:layout_alignBottom="@+id/see_3d"
        android:layout_width="90dp"
        android:layout_height="25dp" />

    <Button
        android:id="@+id/toy_short_buy"
        android:text="购买"
        android:layout_marginLeft="10dp"
        android:background="@color/colorDishBlue"
        android:layout_toRightOf="@id/toy_short_add_cart"
        android:layout_alignBottom="@+id/see_3d"
        android:layout_width="55dp"
        android:layout_height="25dp" />
</RelativeLayout>