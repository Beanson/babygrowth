<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- expert suggestion thumbnail-->
    <ImageView
        android:id="@+id/iv_expert_su"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_centerVertical="true"
        android:layout_width="70dp"
        android:layout_height="70dp" />

    <!-- expert suggestion text short-->
    <TextView
        android:id="@+id/tv_expert_su"
        android:text="hahaah"
        android:gravity="center_vertical"
        android:layout_toRightOf="@+id/iv_expert_su"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/iv_expert_su"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="0dp"
        android:layout_height="match_parent" />

    <!-- division bar -->
    <View
        android:background="@color/colorRaiseBar"
        android:layout_alignBottom="@+id/iv_expert_su"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</RelativeLayout>