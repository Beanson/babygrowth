<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="40dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="10dp">

    <!-- with this kind of way to set the background
        and should be place to the top, the more bottom
        widgets the higher z-index they would have-->
    <View
        android:background="@drawable/fun_play_bg"
        android:layout_alignBottom="@+id/bottom_more"
        android:layout_alignTop="@+id/fun_thumbnail"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

    <ImageView
        android:id="@+id/fun_thumbnail"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <TextView
        android:id="@+id/tv_fun_theme"
        android:text="主题："
        android:layout_marginTop="10dp"
        android:layout_below="@+id/fun_thumbnail"
        android:textColor="@color/colorBlue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/fun_theme"
        android:layout_marginTop="10dp"
        android:text="登山跑跑哟"
        android:layout_toRightOf="@+id/tv_fun_theme"
        android:layout_below="@+id/fun_thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_fun_time"
        android:text="时间："
        android:layout_below="@+id/fun_theme"
        android:textColor="@color/colorBlue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/fun_time"
        android:text="时间：12:00~15:30"
        android:layout_toRightOf="@+id/tv_fun_time"
        android:layout_below="@+id/fun_theme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_fun_place"
        android:text="地点："
        android:layout_below="@+id/fun_time"
        android:textColor="@color/colorBlue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/fun_place"
        android:text="地点：广州白云山"
        android:layout_toRightOf="@+id/tv_fun_place"
        android:layout_below="@+id/fun_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_fun_depict"
        android:text="描述："
        android:layout_below="@+id/fun_place"
        android:textColor="@color/colorBlue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/fun_depict"
        android:text="该活动旨在鼓励亲自活动，号召家庭总动员"
        android:layout_toRightOf="@+id/tv_fun_depict"
        android:layout_below="@+id/fun_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:id="@+id/bottom_more"
        android:layout_below="@id/fun_depict"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
</RelativeLayout>